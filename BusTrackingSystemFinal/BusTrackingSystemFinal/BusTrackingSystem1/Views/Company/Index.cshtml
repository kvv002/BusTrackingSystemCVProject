@model IEnumerable<BusTrackingSystem1.Models.company>

@{
    ViewBag.Title = "Index";
}



<p style="padding-top: 60px; font-size: 20px;">
    @Html.ActionLink("Create New", "Create", null, new { @style = "font-size:20px" })
</p>
<table class="table" style="color: white">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.company_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.company_address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.company_phone_number)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.company_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.company_address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.company_phone_number)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.company_id }) |
            @Html.ActionLink("Details", "Details", new { id=item.company_id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.company_id })
        </td>
    </tr>
}

</table>
