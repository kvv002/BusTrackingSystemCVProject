@model BusTrackingSystem1.Models.route

@{
    ViewBag.Title = "Create";
}

<h2 style="color: #2e5cb8">Add New</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal" style="color:white">
        
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.source, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("source", (IEnumerable<SelectListItem>)ViewBag.source, String.Empty, new { @class = "extra-class" })
                @Html.ValidationMessageFor(model => model.source)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.destination, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("destination", (IEnumerable<SelectListItem>)ViewBag.destination, String.Empty, new { @class = "extra-class" })
                @Html.ValidationMessageFor(model => model.destination)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
