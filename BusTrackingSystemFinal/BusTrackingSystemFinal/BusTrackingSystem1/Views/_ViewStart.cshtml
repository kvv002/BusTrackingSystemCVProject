@{
    var controller = HttpContext.Current.Request.RequestContext.RouteData.Values["Controller"].ToString();

    string layout = "";
    if (controller == "Search")
    {
        layout = "~/Views/Shared/SearchPageLayout.cshtml";
    }
    else
    {
        layout = "~/Views/Shared/AdminLayout.cshtml";
    }

    Layout = layout;
}