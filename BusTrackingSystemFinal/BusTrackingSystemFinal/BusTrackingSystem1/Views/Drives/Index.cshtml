@model IEnumerable<BusTrackingSystem1.Models.drive>

@{
    ViewBag.Title = "Index";
}



<p style="padding-top: 60px ; font-size:20px;">
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" style="color:white">
    <tr>
        <th>
            @Html.Label("Bus ID")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.driver.driver_name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.bus.bus_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.driver.driver_name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.drives_id }) |
                @Html.ActionLink("Details", "Details", new { id = item.drives_id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.drives_id })
            </td>
        </tr>
    }

</table>
