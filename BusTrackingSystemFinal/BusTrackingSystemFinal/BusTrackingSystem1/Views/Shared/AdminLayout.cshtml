<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body style="background-image: url('../../Content/road2.jpg'); background-repeat: no-repeat; opacity: 0.8; ">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>


                <span style="float:left"><img src="../../Content/logo.png" class="img-rounded" alt="logo" width="60" height="60" /></span>
           
                <span class="navbar-brand" style="color: #00cc99; font-size: 22px;  ">@Html.ActionLink("Bus Tracking system", "AdminSearch", "AdminSearch", null, new { style = "color:#f2f2f2" })</span>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" style="font-style: italic;font-size:18px " >
                    
                    <li>@Html.ActionLink("Company Details", "Index", "Company", null, new { style = "color:#f2f2f2" })</li>
                    <li>@Html.ActionLink("Bus Type Details", "Index", "BusType", null, new { style = "color:#f2f2f2" })</li>
                    <li>@Html.ActionLink("Bus Details", "Index", "Bus", null, new { style = "color:#f2f2f2" })</li>

                    <li>@Html.ActionLink("Route", "Index", "Route", null, new { style = "color:#f2f2f2" })</li>

                    <li>@Html.ActionLink("Driver", "Index", "Driver", null, new { style = "color:#f2f2f2" })</li>
                    <li>@Html.ActionLink("Drives", "Index", "Drives", null, new { style = "color:#f2f2f2" })</li>
                </ul>
               <h1 style="padding-top:-10px"></h1>
                @using (Html.BeginForm("Logout", "AdminLogin"))
{
    <input type="submit" value="LOGOUT" class="btn btn-default  navbar-right " />
}
  
          
            </div>
        </div>
    </div>
    <div class="container body-content" style="background-color:black">
        @RenderBody()

        <footer style="padding-top:24em">
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
