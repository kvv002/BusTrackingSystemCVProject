<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body style="background-image: url('../../Content/map.jpg'); background-repeat: no-repeat; ">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                
                <span style="float:left"><img src="../../Content/logo.png" class="img-rounded" alt="logo" width="60" height="60" /></span>
                <span class="navbar-brand" style="color: #00cc99; font-size: 22px;  ">@Html.ActionLink("Bus Tracking system", "Search", "Search", null, new { style = "color:#f2f2f2" })</span>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                   
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @Html.ActionLink("Log in", "login", "AdminLogin", null, new { @class = "navbar-brand", @style = "background-image:url('../../Content/logo.png');color:white" })
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content" style="background-color: #1a0033">
        @RenderBody()

        <footer style="padding-top:24em">
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
